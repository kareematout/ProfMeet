<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:controller="s25.cs151.application.HomeController"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 10; -fx-background-color: #6C47FF;">
            <Label text="ProfMeet" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="32.0" />
                </font>
            </Label>
            <Button text="Office Hours" onAction="#handleOfficeHours"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 30;">
            <Label text="Welcome to ProfMeet" style="-fx-font-size: 32px; -fx-font-weight: bold;"/>
            <Label text="Connect with your professors easily." style="-fx-font-size: 16px; -fx-text-fill: #555555;"/>

            <HBox alignment="CENTER" spacing="40">
                <VBox spacing="10">
                    <Button text="Define Time Slots" onAction="#handleTimeSlots"
                            style="-fx-background-color: #6447D1; -fx-background-radius: 5; -fx-text-fill: white; -fx-font-size: 20px; -fx-padding: 10 20;"/>
                    <Button text="View Stored Time Slots" onAction="#handleTimeSlotViewer"
                            style="-fx-background-color: #6447D1; -fx-background-radius: 5; -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 10 20;"/>
                </VBox>
                <VBox spacing="10">
                    <Button text="Go to Office Hours" onAction="#handleOfficeHours"
                            style="-fx-background-color: #6C47FF; -fx-background-radius: 5; -fx-text-fill: white; -fx-font-size: 20px; -fx-padding: 10 20;"/>
                    <Button text="View Stored Office Hours" onAction="#handleViewStoredOfficeHours"
                            style="-fx-background-color: #6C47FF; -fx-background-radius: 5; -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 10 20;"/>
                </VBox>
                <VBox spacing="10">
                    <Button text="Define Courses" onAction="#goToCoursePage"
                            style="-fx-background-color: #8247FF; -fx-background-radius: 5; -fx-text-fill: white; -fx-font-size: 20px; -fx-padding: 10 20;"/>
                    <Button text="View Stored Courses" onAction="#handleCourseViewer"
                            style="-fx-background-color: #8247FF; -fx-background-radius: 5; -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 10 20;"/>
                </VBox>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #f5f5f5;">
            <Label text="Â© 2025 ProfMeet. All rights reserved." style="-fx-font-size: 12px;"/>
        </HBox>
    </bottom>

</BorderPane>
