<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:controller="s25.cs151.application.MainController"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="20"
      alignment="CENTER"
      style="-fx-padding: 20;
             -fx-background-color: rgba(50, 50, 50, 0.1);
             -fx-background-radius: 15px;
             -fx-font-size: 16px;
             -fx-max-width: 500px;
             -fx-translate-y: 50;">

  <!-- Header Section -->
  <Label text="PROFMEET"
         style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

  <Label text="Smart Scheduling for Smarter Teaching"
         style="-fx-font-size: 16px; -fx-text-alignment: center;"/>

  <!-- Buttons Section -->
  <VBox spacing="15" style="-fx-font-size: 14px;">
    <Button fx:id="bookOfficeHoursButton"
            text="Book Office Hours"
            style="-fx-background-color: #6C47FF;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-padding: 10 20;"
            onAction="#bookOfficeHours"/>

    <Button fx:id="viewMeetingsButton"
            text="View Meetings"
            style="-fx-background-color: #6C47FF;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-padding: 10 20;"
            onAction="#viewMeetings"/>
  </VBox>

</VBox>
