<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml">
    <VBox spacing="15" alignment="CENTER" prefWidth="800" prefHeight="450">
        
        <!-- Title -->
        <Text text="PROFMEET" style="-fx-font-size: 28px; -fx-font-weight: bold;" />

        <!-- Slogan -->
        <Text text="Smart Scheduling for Smarter Teaching" style="-fx-font-size: 16px;" />

        <!-- Buttons -->
        <Button text="Book Office Hours" onAction="bookOfficeHours" style="-fx-font-size: 14px;" />
        <Button text="View Meetings" onAction="viewMeetings" style="-fx-font-size: 14px;" />

        <!-- Embedded Script for Logic -->
        <fx:script>
            <![CDATA[
            import javafx.scene.control.Alert;
            import javafx.scene.control.Alert.AlertType;

            public void bookOfficeHours() {
                Alert alert = new Alert(AlertType.INFORMATION);
                alert.setTitle("Booking");
                alert.setHeaderText(null);
                alert.setContentText("Book Office Hours clicked!");
                alert.showAndWait();
            }

            public void viewMeetings() {
                Alert alert = new Alert(AlertType.INFORMATION);
                alert.setTitle("Meetings");
                alert.setHeaderText(null);
                alert.setContentText("View Meetings clicked!");
                alert.showAndWait();
            }
            ]]>
        </fx:script>

    </VBox>
</AnchorPane>
