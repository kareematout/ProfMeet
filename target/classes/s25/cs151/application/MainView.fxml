<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml">
    <VBox spacing="10" alignment="CENTER" prefWidth="800" prefHeight="450">
        
        <!-- Title and Icon -->
        <HBox alignment="CENTER">
            <ImageView fitHeight="50" fitWidth="50">
                <Image url="@icon.png" />
            </ImageView>
            <Text text="PROFMEET" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        </HBox>

        <!-- Slogan -->
        <Text text="Smart Scheduling for Smarter Teaching" style="-fx-font-size: 16px;" />

        <!-- Buttons -->
        <Button text="Book Office Hours" onAction="bookOfficeHours" />
        <Button text="View Meetings" onAction="viewMeetings" />

        <!-- Embedded Script for Logic -->
        <fx:script>
            <![CDATA[
            import javafx.scene.control.Alert;
            import javafx.scene.control.Alert.AlertType;

            public void bookOfficeHours() {
                Alert alert = new Alert(AlertType.INFORMATION);
                alert.setTitle("Booking");
                alert.setHeaderText(null);
                alert.setContentText("Book Office Hours clicked!");
                alert.showAndWait();
            }

            public void viewMeetings() {
                Alert alert = new Alert(AlertType.INFORMATION);
                alert.setTitle("Meetings");
                alert.setHeaderText(null);
                alert.setContentText("View Meetings clicked!");
                alert.showAndWait();
            }
            ]]>
        </fx:script>

    </VBox>
</AnchorPane>
