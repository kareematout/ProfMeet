<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:controller="s25.cs151.application.Controller.CourseController"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="30"
      alignment="CENTER"
      style="-fx-padding: 0 20 0 20;
      -fx-background-color: rgba(100, 0, 100, 0.05);
      -fx-max-height: 400;
      -fx-background-radius: 20px;
      -fx-font-size: 15px;
      -fx-translate-y: 90;">

    <Label text="Course Details" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Course Code Section -->
    <HBox spacing="10">
        <Label text="Course Code *"/>
        <TextField fx:id="courseCodeField" promptText="Ex: CS151" prefWidth="250"/>
    </HBox>

    <!-- Course Name Section -->
    <HBox spacing="10">
        <Label text="Course Name *"/>
        <TextField fx:id="courseNameField" promptText="Ex: Object-Oriented Design" prefWidth="250"/>
    </HBox>

    <!-- Section Number Section -->
    <HBox spacing="10">
        <Label text="Section *"/>
        <TextField fx:id="sectionField" promptText="Ex: 01" prefWidth="250"/>
    </HBox>

    <Button text="Submit" style="-fx-background-color: #6C47FF; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#submitCourse"/>

</VBox>
